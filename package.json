{
    "name": "tshedit",
    "version": "1.0.0",
    "description": "A typescript html css hexeditor running inside electron",
    "main": "./src/main/main.js",
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "\\.(ts)$": "ts-jest"
        },
        "testRegex": "/src/.*\\.spec\\.(js)$"
    },
    "scripts": {
        "test": "jest",
        "prebuild": "npm run lint",
        "build": "tsc",
        "postbuild": "node-sass css -o css",
        "lint": "tslint --project .",
        "start": "electron ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cgewert/tshedit.git"
    },
    "keywords": [
        "hexeditor"
    ],
    "author": "Christian Gewert",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/cgewert/tshedit/issues"
    },
    "homepage": "https://github.com/cgewert/tshedit#readme",
    "dependencies": {
        "electron": "7.2.4",
        "pug": "^3.0.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.25",
        "jest": "24.9.0",
        "node-sass": "4.13.1",
        "prettier": "1.19.1",
        "spectron": "9.0.0",
        "ts-jest": "24.2.0",
        "tslint": "5.20.1",
        "typescript": "3.7.3"
    }
}
